{
    "extends": "airbnb-base",
    "plugins": [
        "import"
    ],
    "rules": {
        "indent": ["error", 4],
        "comma-dangle": ["error", "never"],
        "space-before-function-paren": ["warn", {
            "anonymous": "always",
            "named": "always"
        }],
        "max-len": [2, 100, 2, {
            "ignoreUrls": true,
            "ignoreComments": false,
            "ignorePattern": "^\\import\\s.*"
        }],
        "consistent-return": 0,
        "no-use-before-define": ["error", { "functions": false }]
    }
}
